{
  "manifest_version": 3,
  "name": "Pinterest Stats Analyzer",
  "version": "1.0.0",
  "description": "Reveal Pinterest stats for each pin! Sort pins by likes, comments or creation date with this marketing analyzer tool",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.pinterest.com/*",
    "https://*.pinimg.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.pinterest.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Pinterest Stats Analyzer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["stats.html", "pinterest-interceptor.js"],
      "matches": ["https://*.pinterest.com/*"]
    }
  ]
}
